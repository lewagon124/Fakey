<div class="containersignup"  style= "background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=image_url('banner1.jpg')%>)">
  <div class="inner">
    <h2 id="title">Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    placeholder: "Email",
                    label: '&nbsp;'.html_safe,
                    required: true,
                    autofocus: true,
                    :class => "email",
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    placeholder: "Password",
                    label: '&nbsp;'.html_safe,
                    :class => "password",
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    placeholder: "Password Confirm",
                    label: '&nbsp;'.html_safe,
                    :class => "passwordcon",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", :class=>"signup" %>
      </div>
    <% end %>
  </br>
  <p class="centered">By clicking "Create Account" you agree to our Terms and Privacy Policy.</p>

  <p class="centered">Already have an account?
    &nbsp;
    <%=link_to new_user_session_path do%>
    Sign in
    <% end %>
    &nbsp;
  here.</p>
  </div>
</div>
